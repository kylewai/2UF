<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"  android:layout_width="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offBlue"
        android:clickable="true"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/code"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Code"
            android:textColor="@color/textOnPrimary"
            android:textSize="36sp"
            android:transitionName="expand" />

        <Button
            android:id="@+id/dropButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/code"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:backgroundTint="@color/colorSecondaryLight"
            android:text="Drop" />

        <TextView
            android:id="@+id/name"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/code"
            android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="24dp"
            android:text="Name"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="8dp"
            android:shadowDx="1"
            android:text="description"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/department"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="8dp"
            android:text="department"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/prereqs"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/department"
            android:layout_marginTop="8dp"
            android:text="prereqs"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/instructors"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/prereqs"
            android:layout_marginTop="8dp"
            android:text="instructors"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/meetTimes"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructors"
            android:layout_marginTop="8dp"
            android:text="meetTimes"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/examTime"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/meetTimes"
            android:layout_marginTop="8dp"
            android:text="examTime"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorSecondaryLight"
            android:text="Close" />

        <View
            android:id="@+id/divider"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@+id/meetTimes"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider2"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@+id/code"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider3"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@+id/name"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider4"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@+id/department"
            android:layout_marginTop="-0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider5"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@+id/description"
            android:layout_marginTop="-0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider6"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@+id/prereqs"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider7"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@+id/instructors"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

    </RelativeLayout>
</ScrollView>
</FrameLayout>