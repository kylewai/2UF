<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/offBlue"
        android:clickable="true"
        android:orientation="vertical">

        <View
            android:id="@+id/divider16"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@+id/code"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider17"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@+id/name"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider18"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@+id/description"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider19"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@id/department"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider20"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@id/prereqs"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider21"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@id/instructors"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider22"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@id/meetTimes"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <View
            android:id="@+id/divider23"
            android:layout_width="236dp"
            android:layout_height="1dp"
            android:layout_below="@id/examTime"
            android:layout_marginTop="0dp"
            android:background="@color/colorSecondary" />

        <TextView
            android:id="@+id/code"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Code"
            android:textColor="@color/textOnPrimary"
            android:textSize="36sp"
            android:transitionName="expand" />

        <TextView
            android:id="@+id/name"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/code"
            android:layout_marginTop="24dp"
            android:text="Name"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginTop="8dp"
            android:text="description"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/department"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/description"
            android:layout_marginTop="8dp"
            android:text="department"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/prereqs"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/department"
            android:layout_marginTop="8dp"
            android:text="prereqs"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/instructors"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/prereqs"
            android:layout_marginTop="8dp"
            android:text="instructors"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/meetTimes"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/instructors"
            android:layout_marginTop="8dp"
            android:text="meetTimes"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/examTime"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/meetTimes"
            android:layout_marginTop="8dp"
            android:text="examTime"
            android:textColor="@color/textOnPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorSecondaryLight"
            android:text="Close" />

        <Button
            android:id="@+id/dropButton"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"

            android:layout_alignParentBottom="true"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="182dp"
            android:text="Drop" />
    </RelativeLayout>
</ScrollView>