<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Other style attributes -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="Divider_invisible">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="class_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:autoSizeMaxTextSize">100sp</item>
        <item name="android:autoSizeMinTextSize">1sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">#FFF</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingHorizontal">1dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="time_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:autoSizeMaxTextSize">10sp</item>
        <item name="android:autoSizeMinTextSize">1sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">2</item>
        <item name="android:background">#FFF</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="time_label_cell">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:autoSizeMaxTextSize">10sp</item>
        <item name="android:autoSizeMinTextSize">1sp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">#FFF</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="day_label_cell">
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">#FFF</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="table_row">
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">#000</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
